{% extends 'backend_layout.twig' %}
{% import _self as self %}

{% block content %}
        <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>{{ page.title }}</h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">{{ page.title }}</h3>
            </div>
            <div class="box-body">
                <table id="tableData" class="table table-striped table-bordered table-hover" style="width: 100%"></table>
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}


{% block head %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ base_url() }}/assets/magnific-popup/dist/magnific-popup.css">

    <link rel="stylesheet" href="{{ base_url() }}/libs/DataTables/dataTables.min.css">

    <link rel="stylesheet" href="{{ base_url() }}/libs/dataTableExportCollection/dataTableExportCollection.css">

{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ base_url() }}/assets/magnific-popup/dist/jquery.magnific-popup.min.js"></script>

    <script type="text/javascript" src="{{ base_url() }}/libs/DataTables/datatables.js"></script>

    <script type="text/javascript" src="{{ base_url() }}/assets/dataTableSelectAllBtn/dataTableSelectAllBtn.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/assets/dataTableExportCollection/dataTableExportCollection.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/assets/dataTableColumnFilter/dataTableColumnFilter.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/assets/dataTableActionBtns/dataTableActionBtns.js"></script>

    <script type="text/javascript">
        $(document).ready(function(){
            $.extend( true, $.fn.dataTable.defaults, {
                dom: "<'row'<'col-sm-6 col-lg-3'B><'col-sm-6 col-lg-3'l><'col-sm-6 col-lg-4'fr><'col-sm-6 col-lg-2 text-right'b>>" +
                "<'row'<'col-sm-12't>>" +
                "<'row'<'col-sm-5'i><'col-sm-7'p>>",

                serverSide: true,
                //    ordering: false,
                //   searching: false,

                scrollY: '54vh',
                scrollX: true,
                scrollCollapse: true,
                scroller: {
                    loadingIndicator: true,
                    displayBuffer: 20
                },

                buttons: [
                    'select_all',
                    'export_collection',
                    {
                        extend: 'colvis',
                        text: '<i class="fa fa-eye-slash" aria-hidden="true"></i>',
                        titleAttr: 'Column visibility',
                        columns: ':not(.action_btns_container)',
                        postfixButtons: [ 'colvisRestore' ],
                    },
                ],

                language: {{ dtLanguage|raw }},

                select: {
                    style: 'multi',
                    selector: 'td:not(.action_btns_container)',
                    blurable: true
                },
                stateSave: true,
                stateSaveParams: function (settings, data) {
                    delete data.search;
                    for (var i = 0;i < data.columns.length; i++){
                        delete data.columns[i].search;
                    }
                },
                colReorder: {realtime: false},

                dataTableColumnFilter: true,

                order: [],   /* Disable initial sort */
                //order: [[ 0, 'asc' ]],

               // autoWidth: false, //Disable smart width calculations

                //iDisplayLength: 5,
                //aLengthMenu: [ [5, 50, -1], [5, 50, "All"] ],
            } );


            var tableData = $('#tableData').DataTable( {
                ajax: "{{ base_url() }}{{ path_for(currentRoute~'_getTable', {'lang': lang}) }}",
                columns: {{ dtColumns|raw }},

                dataTableActionBtns: {{ actions|json_encode|raw }},

                initComplete: function (settings, json) {
                    var api = this.api();

