{% extends 'backend_layout.twig' %}



{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>{{ pageTitle }}</h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="box box-primary">
            <div class="box-body">
                {% if items|length > 0 %}
                    <table id="items" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>{{ 'Industry'|trans }}</th>
                                <th>{{ 'Suppliers'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in items %}
                                <tr>
                                    <td>{{ item.name }}</td>
                                    <td>{{ item.users }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}

{% block head %}
    {{ parent() }}

    <link type="text/css" rel="stylesheet" href="{{ base_url() }}/libs/DataTables/dataTables.min.css">
    <link type="text/css" rel="stylesheet" href="{{ base_url() }}/libs/dataTableExportCollection/dataTableExportCollection.css">
{% endblock %}

{% block scripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ base_url() }}/libs/DataTables/datatables.min.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/assets/dataTableSelectAllBtn/dataTableSelectAllBtn.js"></script>
    <script type="text/javascript" src="{{ base_url() }}/libs/dataTableExportCollection/dataTableExportCollection.js"></script>

    <script type="text/javascript">
        $(document).ready(function(){
            $.extend( true, $.fn.dataTable.defaults, {
                dom: "<'row'<'col-sm-6 col-lg-3'B><'col-sm-6 col-lg-3'l><'col-sm-6 col-lg-4'fr><'col-sm-6 col-lg-2 dataTableExtraBtns'>>" +
                "<'row'<'col-sm-12't>>" +
                "<'row'<'col-sm-5'i><'col-sm-7'p>>",

                iDisplayLength: 15,
                aLengthMenu: [ [15, 50, -1], [15, 50, "All"] ],
                language: {
                    url: "{{ base_url() }}/resources/libs/DataTables-1.10.15/i18n/{{ lang }}.json",
                },
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false,
                }],

                //"ordering": false,
                "aaSorting": [],   /* Disable initial sort */
                //"aaSorting": [[ 0, 'asc' ]],

                "autoWidth": false,
                "scrollX": true,
            } );

            var items = $("#items").DataTable({

                "columnDefs": [
                    { "width": "100px", "targets": [1] },
                ],

                buttons: [
                    //   'select_all',
                    'export_collection',
                ],
            });
        });
    </script>
{% endblock %}