{% extends 'frontend_layout.twig' %}

{% block content %}
    <!--========== SLIDER ==========-->
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <div class="container">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            </ol>
        </div>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img class="img-responsive" src="{{ base_url() }}/resources/img/1920x1080/01.jpg" alt="Slider Image">
                <div class="container">
                    <div class="carousel-centered">
                        <a href="{{ path_for('login',    {'lang': lang}) }}" class="btn-theme btn-theme-sm btn-white-brd text-uppercase">{{ 'Sign in'|trans }}</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="{{ path_for('register', {'lang': lang}) }}" class="btn-theme btn-theme-sm btn-white-brd text-uppercase">{{ 'Sign up'|trans }}</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="{{ path_for('why_reg',  {'lang': lang}) }}" class="btn-theme btn-theme-sm btn-white-brd text-uppercase">{{ 'Why?'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--========== SLIDER ==========-->

    <!--========== PAGE LAYOUT ==========-->
    {{ about_tpl|raw }}
    {{ partners_tpl|raw }}
    {{ service_tpl|raw }}
    {{ contact_tpl|raw }}
    <!--========== END PAGE LAYOUT ==========-->
{% endblock %}

{% block head %}
    {{ parent() }}

    <style>
        #map {
            width: 100%;
            height: 400px;
            background-color: grey;
        }
    </style>

{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBsXUGTFS09pLVdsYEE9YrO2y4IAncAO2U"></script>
    <script src="{{ base_url() }}/resources/js/google-map.min.js" type="text/javascript"></script>


    <script src="{{ base_url() }}/assets/bootstrap-validator/dist/validator.min.js?ver={{ version }}"></script>

    <script type="text/javascript">
		$(document).ready(function(){

		});
    </script>
{% endblock %}