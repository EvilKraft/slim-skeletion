{% extends 'frontend_layout.twig' %}

{% block content %}
    <div class="content-lg container margin-t-40">
        <div class="page-header">
            <h2>{{ title|trans }}</h2>
        </div>
        {{ text|raw }}

        <div class="col-sm-8" >
            <a href="{{ path_for('register', {'lang': lang}) }}" class="form-btn semibold">{{ 'Back'|trans }}</a>
        </div>
    </div>
{% endblock %}

{% block head %}
    {{ parent() }}

    <style>

        ol {
            list-style-type: none;
            counter-reset: item;
            margin: 0;
            padding: 0;
        }

        ol > li {
            display: table;
            counter-increment: item;
            margin-bottom: 0.6em;
        }

        ol > li:before {
            content: counters(item, ".") ". ";
            display: table-cell;
            padding-right: 0.6em;
        }

        li ol > li {
            margin: 0;
        }

        li ol > li:before {
            content: counters(item, ".") " ";
        }
    </style>
{% endblock %}