<div class="white-popup">
    {% if suppliers|length > 0 %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>{{ 'Name'|trans }}</th>
                    <th>{{ 'Description'|trans }}</th>
                    <th>{{ 'Phone'|trans }}</th>
                    <th>{{ 'Email'|trans }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for supplier in suppliers %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ supplier.name }}</td>
                        <td>{{ supplier.description }}</td>
                        <td>{{ supplier.phone }}</td>
                        <td><a href="mailto:{{ supplier.email }}">{{ supplier.email }}</a></td>
                        <td><a href="{{ path_for('tenders_msgs', {'lang': lang, 'id': supplier.tenderId, 'accessId': supplier.id}) }}"><i class="fa fa-envelope-o fa-lg"></i></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h4>{{ 'You have no suppliers for the tender!'|trans }}</h4>
    {% endif %}
</div>