<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="keywords" content="{{ keywords|default('') }}">
        <meta name="description" content="{{ description|default('') }}">
        <meta name="author" content="Konstantin Kaluzhnikov, k.kaluzhnikov@gmail.com">
        <link rel="icon" href="{{ base_url() }}/favicon.ico">

        <title>{{ page_title|default('site_name'|trans) }}</title>

        {% block head %}

            <!-- Bootstrap core CSS -->
            <link rel="stylesheet" href="{{ base_url() }}/assets/bootstrap/dist/css/bootstrap.min.css?ver={{ version }}">
            <!-- Font Awesome -->
            <link rel="stylesheet" href="{{ base_url() }}/assets/font-awesome/css/font-awesome.min.css?ver={{ version }}">
            <!-- Ionicons -->
            <link rel="stylesheet" href="{{ base_url() }}/assets/ionicons/css/ionicons.min.css?ver={{ version }}">

            <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Arial+bold&subset=cyrillic:300,400,500,600,700" type="text/css" >

            <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/css/ie10-viewport-bug-workaround.css?ver={{ version }}">

            <link rel="stylesheet" href="{{ base_url() }}/assets/jquery-toast-plugin/dist/jquery.toast.min.css">

            <link type="text/css" rel="stylesheet" href="{{ base_url() }}/assets/flag-icon-css/css/flag-icon.min.css?ver={{ version }}">
            <style>
                .flag-icon-en {
                    background-image: url({{ base_url() }}/assets/flag-icon-css/flags/4x3/gb.svg);
                }
                .flag-icon-en.flag-icon-squared {
                    background-image: url({{ base_url() }}/assets/flag-icon-css/flags/1x1/gb.svg);
                }
            </style>

            <!-- THEME STYLES -->
            <link rel="stylesheet" href="{{ base_url() }}/resources/css/frontend_layout.min.css"  type="text/css"/>
            <!-- Custom styles for this template -->
            <link rel="stylesheet" href="{{ base_url() }}/resources/css/frontend_custom.css?ver={{ version }}">
        {% endblock %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body id="body" data-spy="scroll" data-target=".header">
			<!-- Global site tag (gtag.js) - Google Analytics -->
			<script async src="https://www.googletagmanager.com/gtag/js?id=UA-108866014-1"></script>
				<script>
						window.dataLayer = window.dataLayer || [];
						function gtag(){dataLayer.push(arguments);}
						gtag('js', new Date());
						gtag('config', 'UA-108866014-1');
				</script>

        <!--========== HEADER ==========-->
        <header class="header navbar-fixed-top">
            <!-- Navbar -->
            <nav class="navbar" role="navigation">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="menu-container js_nav-item">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".nav-collapse">
                          
                            <span class="toggle-icon"></span>
                        </button>

                        <!-- Logo -->
                        <div class="logo">
                            <a class="logo-wrap" href="{{ path_for('home', {'lang': lang}) }}">
                                <img class="logo-img logo-img-main img-responsive" src="{{ base_url() }}/resources/img/logo.png" alt="MyTender">
                                <img class="logo-img logo-img-active img-responsive" src="{{ base_url() }}/resources/img/logo-dark.png" alt="MyTender">
                            </a>
                        </div>
                        <!-- End Logo -->

                        
                    </div>



                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse nav-collapse">
					
                        <div class="menu-container">
                            <ul class="nav navbar-nav navbar-nav-right">
                                <li class="js_nav-item nav-item"><a class="nav-item-child nav-item-hover" href="{{ path_for('home',     {'lang': lang}) }}#body">{{ 'Home'|trans }}</a></li>
                                <li class="js_nav-item nav-item"><a class="nav-item-child nav-item-hover" href="{{ path_for('home',     {'lang': lang}) }}#about">{{ 'About'|trans }}</a></li>
                                <li class="js_nav-item nav-item"><a class="nav-item-child nav-item-hover" href="{{ path_for('home',     {'lang': lang}) }}#products">{{ 'Partners'|trans }} </a></li>
                                <li class="js_nav-item nav-item"><a class="nav-item-child nav-item-hover" href="{{ path_for('home',     {'lang': lang}) }}#service">{{ 'Services'|trans }}</a></li>
                                <li class="js_nav-item nav-item"><a class="nav-item-child nav-item-hover" href="{{ path_for('home',     {'lang': lang}) }}#contact">{{ 'Contact'|trans }}</a></li>
                            </ul>
                        </div>
						<div class="logo2 navbar-nav-right" style="margin:12px;">
                            {% for site_lang in site_langs %}
                                {% if site_lang != lang %}
                                    {% set currentRouteArgs = currentRouteArgs|merge({'lang': site_lang}) %}

                                    <a href="{{ path_for(currentRoute, currentRouteArgs) }}" style="padding: 0; margin-right: 10px">
                                        <i class="flag-icon flag-icon-{{ site_lang }}"></i>
                                    </a>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    <!-- End Navbar Collapse -->
                </div>
            </nav>
            <!-- Navbar -->
        </header>
        <!--========== END HEADER ==========-->

        {% block content %}
        {% endblock %}

        <!--========== FOOTER ==========-->
        <footer class="footer">
            <!-- Links -->
            <!-- Copyright -->
            <div class="content container">
                <div class="row">
                    <div class="col-xs-4">
                        <a href="{{ path_for('home', {'lang': lang}) }}">
                            <img class="footer-logo" src="{{ base_url() }}/resources/img/logo-dark.png" alt="MyTender">
                        </a>
                    </div>
                    <div class="col-xs-3 text-left">
					     <p class="margin-b-0"> Copyright 2017. {{ 'All rights reserved'|trans }}</p>
                    </div>
                    <div class="col-xs-5 text-right">
                        <!--<a href="mailto:k.kaluzhnikov@gmail.com">Konstantin Kaluzhnikov, k.kaluzhnikov@gmail.com</a>.-->
                        <p class="margin-b-0 foot-copy"> {{'Partial copying'|trans }}<!---Full or partial copying of materials is prohibited, with consistent use of materials from the platform, refer to the resource--></p>
                    </div>
                </div>
                <!--// end row -->
            </div>
            <!-- End Copyright -->
        </footer>
        <!--========== END FOOTER ==========-->

        <!-- Back To Top -->
        <a href="javascript:void(0);" class="js-back-to-top back-to-top">Top</a>

        {% block scripts %}
            <!-- jQuery 3 -->
            <script src="{{ base_url() }}/assets/jquery/dist/jquery.min.js?ver={{ version }}"></script>
            <!-- Bootstrap 3.3.7 -->
            <script src="{{ base_url() }}/assets/bootstrap/dist/js/bootstrap.min.js?ver={{ version }}"></script>

            <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
            <script src="https://maxcdn.bootstrapcdn.com/js/ie10-viewport-bug-workaround.js?ver={{ version }}"></script>

            <script src="https://code.jquery.com/jquery-migrate-3.0.1.js"></script>

            <!-- PAGE LEVEL SCRIPTS -->
            <script src="{{ base_url() }}/resources/js/layout.min.js" type="text/javascript"></script>
			<script src="{{ base_url() }}/resources/js/jquery.min.js" type="text/javascript"></script>
			<script src="{{ base_url() }}/resources/js/bootstrap.min.js" type="text/javascript"></script>

            <script src="{{ base_url() }}/assets/jquery-toast-plugin/dist/jquery.toast.min.js"></script>

            <script src="{{ base_url() }}/resources/js/main.js?ver={{ version }}"></script>

            <script type="text/javascript">
                $(document).ready(function() {
                    {% for type, group in flash_messages %}
                        $.toast({
                            heading: '{{ type|capitalize }}!',
                            text: [
                                {% for msg in group %}
                                    '{{ msg }}',
                                {% endfor %}
                            ],
                            icon: '{{ type }}',
                            position: 'bottom-right',
                            showHideTransition: 'slide',
                            loader: false
                        });
                    {% endfor %}
                });
            </script>
        {% endblock %}
    </body>
</html>